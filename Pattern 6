#include<stdio.h>
#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
    
    //printTriangle(5);
    int n=5;
    for (int i=0;i<n;i++)
        {
            for (int j=0;j<n-i-1;j++)
            {
                cout<<" ";
            }
            for(int k=0;k<2*i+1;k++)
            {
                cout<<"*";
            }
            cout<<"\n";
        }
    return 0;    
}
