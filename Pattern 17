#include <iostream>

using namespace std;

int main()
{
    int n=5;
    for (int i=0;i<n;i++)
        {
            char ch='A';
            int b = ((2*i)+1) / 2;
            for (int j=0;j<n-i-1;j++)
            {
                cout<<" ";
            }
            for(int k=0;k<2*i+1;k++)
            {
                cout<<ch;
                if(k<=b) ch++;
                else ch--;
            }
            cout<<"\n";
        }

    return 0;
}
