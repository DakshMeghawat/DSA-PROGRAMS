for (int i=0;i<n;i++)
        {
            for(j=0;j<n-i-1;i++)
            {
                cout<<" ";
            }
            char c=A;
            int b=(2*i-1)/2
            for(k=0;k<2*i-1;k++)
            {
                cout<<c;
                if(k<=b)
                {
                    c++;
                }
                else
                {
                    c--;
                }
            }
        }
